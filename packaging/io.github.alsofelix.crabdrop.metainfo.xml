<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.alsofelix.crabdrop</id>
    <name>Crabdrop</name>
    <summary>S3-compatible file manager</summary>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>MIT</project_license>
    <description>
        <p>
            A simple and fast app to manage files stored online.
            Easily connect to popular cloud storage services
            and move files between your computer and the cloud.
        </p>

        <p>Features:</p>
        <ul>
            <li>Browse files and folders</li>
            <li>Upload and download files</li>
            <li>Drag and drop uploads</li>
            <li>Upload large files reliably</li>
            <li>See upload progress in real time</li>
        </ul>

        <p>
            Works with AWS S3, Cloudflare R2, MinIO,
            and other compatible cloud storage services.
        </p>
    </description>

    <launchable type="desktop-id">io.github.alsofelix.crabdrop.desktop</launchable>
    <categories>
        <category>Utility</category>
        <category>FileManager</category>
        <category>Network</category>
    </categories>
    <screenshots>
        <screenshot type="default">
            <image>
                https://raw.githubusercontent.com/alsofelix/crabdrop/324a9551838d2b635e3066cdd588da2f10356e76/screenshots/main-app-screenshot.png
            </image>
            <caption>File browser</caption>
        </screenshot>
    </screenshots>
    <url type="homepage">https://github.com/alsofelix/crabdrop</url>
    <url type="bugtracker">https://github.com/alsofelix/crabdrop/issues</url>
    <url type="vcs-browser">https://github.com/alsofelix/crabdrop</url>
    <developer id="io.github.alsofelix">
        <name>Felix</name>
    </developer>
    <branding>
        <color type="primary" scheme_preference="light">#ff6b35</color>
        <color type="primary" scheme_preference="dark">#ff6b35</color>
    </branding>
    <content_rating type="oars-1.1"/>
    <releases>
        <release version="0.1.10" date="2026-02-01">
            <description>
                <ul>
                    <li>Adds the option to share files via a presigned url</li>
                </ul>
            </description>
        </release>
        <release version="0.1.9" date="2026-01-29">
            <description>
                <ul>
                    <li>Fixed a critical bug with multipart uploads</li>
                </ul>
            </description>
        </release>
        <release version="0.1.8" date="2026-01-29">
            <description>
                <ul>
                    <li>Fixed a bug where you could not upload multiple files at once</li>
                </ul>
            </description>
        </release>
        <release version="0.1.6" date="2026-01-30">
            <description>
                <ul>
                    <li>Moved credential storage to the system keyring via Secret Service</li>
                    <li>Removed secrets from on-disk configuration files</li>
                    <li>Improved settings flow to safely update credentials without re-entering them</li>
                    <li>Fixed repeated password prompts caused by legacy configuration data</li>
                </ul>
            </description>
        </release>

        <release version="0.1.4" date="2026-01-29">
            <description>
                <ul>
                    <li>Improved downloads with progress indicators</li>
                    <li>Fixed multiple issues when using MinIO storage</li>
                    <li>Fixed a startup issue affecting some NVIDIA GPU setups</li>
                </ul>
            </description>
        </release>
        <release version="0.1.3" date="2025-01-28">
            <description>
                <p>Initial release</p>
            </description>
        </release>
    </releases>
